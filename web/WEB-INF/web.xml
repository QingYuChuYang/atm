<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.bjpn.servlet.ATMLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/atmLogin.action</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>reg</servlet-name>
        <servlet-class>com.bjpn.servlet.ATMRegServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>reg</servlet-name>
        <url-pattern>/atmReg.action</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>saveMoney</servlet-name>
        <servlet-class>com.bjpn.servlet.ATMSaveMoneyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>saveMoney</servlet-name>
        <url-pattern>/saveMoney.action</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>takeMoney</servlet-name>
        <servlet-class>com.bjpn.servlet.ATMTakeMoneyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>takeMoney</servlet-name>
        <url-pattern>/takeMoney.action</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>transferMoney</servlet-name>
        <servlet-class>com.bjpn.servlet.ATMTransferMoneyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>transferMoney</servlet-name>
        <url-pattern>/transferMoney.action</url-pattern>
    </servlet-mapping>
</web-app>